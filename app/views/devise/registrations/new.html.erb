<h3 class='text-center'>
  <p class="text-primary">Novo usuário</p>
</h3>

<hr/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form-control", autocomplete: "name" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :age %><br />
    <%= f.number_field :age, class: "form-control", autocomplete: "age" %>
  </div>
  
  <div class="form-group mb-3">
    <%= f.label :genre %><br />
    <%= select_tag(:genre, options_for_select([['Feminino', 0], ['Masculino', 1], ['Não declarar', 2]]), { class: 'form-control' })%>
  </div>

  
  <div class="field">
    <%= f.file_field :avatar, class: "form-control" %><br/>
  </div>

  <div class="actions">
    <%= f.submit "Criar", class: "btn btn-primary" %>
    <%= link_to('Voltar', new_user_session_path, class: 'btn btn-primary') %>
  </div>
<% end %>